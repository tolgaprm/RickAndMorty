<?xml version="1.0" encoding="utf-8"?>
 <navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_nav_graph"
    app:startDestination="@id/characterListFragment">

    <fragment
        android:id="@+id/characterListFragment"
        android:name="comprmto.rickyandmorty.presentation.character.fragments.CharacterListFragment"
        android:label="CharacterListFragment"
        tools:layout="@layout/fragment_character_list" >
        <action
            android:id="@+id/action_characterListFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
        <action
            android:id="@+id/action_characterListFragment_to_filterDialog"
            app:destination="@id/filterDialog" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="comprmto.rickyandmorty.presentation.character.fragments.CharacterDetailFragment"
        android:label="CharacterDetailFragment"
        tools:layout="@layout/fragment_character_detail" >
        <argument
            android:name="characterID"
            app:argType="integer" />
        <action
            android:id="@+id/action_characterDetailFragment_to_characterListFragment"
            app:destination="@id/characterListFragment"
            app:popUpTo="@id/characterDetailFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/actionToLocationDetail"
            app:destination="@id/locationDetailFragment" />
        <argument android:name="isFromCharacterList"
            app:argType="boolean" />
        <argument
            android:name="locationID"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <dialog
        android:id="@+id/filterDialog"
        android:name="comprmto.rickyandmorty.presentation.character.fragments.FilterDialog"
        android:label="FilterDialog"
        tools:layout="@layout/dialog_filter"/>
    <fragment
        android:id="@+id/locationDetailFragment"
        android:name="comprmto.rickyandmorty.presentation.character.fragments.LocationDetailFragment"
        android:label="LocationDetailFragment"
        tools:layout="@layout/fragment_location_detail">
        <argument
            android:name="locationId"
            app:argType="integer" />
        <action
            android:id="@+id/actionToCharacterDetail"
            app:destination="@id/characterDetailFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/locationDetailFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="characterID"
            app:argType="integer" />
    </fragment>
</navigation>